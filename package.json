{
  "name": "markdown-decorator",
  "version": "1.0.0",
  "description": "A lightweight utility for inserting text into markdown files and templates.",
  "homepage": "https://github.com/gregswindle/markdown-decorator#readme",
  "author": "Greg Swindle",
  "files": [
    "lib",
    "markdown-toc"
  ],
  "main": "lib/markdown-decorator.js",
  "keywords": [
    "markdown",
    "toc",
    "insert",
    "templates"
  ],
  "devDependencies": {
    "commitplease": "^3.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-xo-space": "^0.21.0",
    "eslint-index": "^1.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-jsdoc": "^4.0.1",
    "eslint-plugin-no-unsafe-innerhtml": "^1.0.16",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-xss": "^0.1.8",
    "jest": "^24.0.0",
    "jest-cli": "^24.0.0",
    "nsp": "^3.2.1",
    "standard-version": "^4.2.0"
  },
  "scripts": {
    "lint": "node_modules/.bin/eslint -c .eslintrc.yml lib/*.js -f table --fix",
    "test": "jest --config=jest.config.json",
    "posttest": "nsp check",
    "pretest": "npm run lint",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregswindle/markdown-decorator.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gregswindle/markdown-decorator/issues"
  },
  "eslintConfig": {
    "extends": "xo-space",
    "env": {
      "jest": true,
      "node": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "commitplease": {
    "style": "angular",
    "types": [
      "build",
      "chore",
      "ci",
      "docs",
      "feat",
      "fix",
      "perf",
      "refactor",
      "revert",
      "style",
      "test"
    ],
    "scope": "\\S+.*"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "markdown-toc": "^1.1.0"
  }
}
